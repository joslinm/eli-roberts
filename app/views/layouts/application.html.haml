!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Eli Roberts -- Musician
    = favicon_link_tag asset_path('favicon.png'), :rel => 'icon', :type =>  'image/png'
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag '//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'https://code.jquery.com/jquery-3.3.1.min.js'
    = javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js'
    = javascript_include_tag '//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %div
    #nav-bar
      %a{href: '/'}
        = image_tag('logo.png')
      %a.nav-item{href: '/'}
        Home
      .separator
      %a.nav-item{href: '/music'}
        Music
      .separator
      %a.nav-item{href: '/performances'}
        Performances
      .separator
      %a.nav-item{href: '/resume'}
        Resume
      .separator
      %a.nav-item{href: '/contact'}
        Contact


  %body
    = yield

#footer
  %div.left.left-side
    %a{href: 'www.instagram.com'}
      = image_tag('instagram.png')
    %a{href: 'www.facebook.com'}
      = image_tag('facebook.png')
    %a{href: 'www.instagram.com'}
      = image_tag('youtube.png')

  %div.right.right-side
    %div
      %i.material-icons gamepad
    %div
      %span Created by
      %a{href: "http://www.markjoslin.com"} Mark Joslin
